.teams.index
  %h1 #{current_company.display_name} Teams
  .grid_8.push_2.clearfix
    %table
      %tr
        %th Number
        %th Manager
        %th Description
        %th Status
        %th &nbsp;
      - teams.each do |team|
        %tr{ color_cycle }
          %td= team.key
          %td
            - team_manager = team.manager
            = team_manager ? team_manager.full_name : '&nbsp;'.html_safe
          %td= team.description
          %td= team.state
          %td
            .actions
              = # link_to 'Show', team
              = link_to 'Edit', edit_team_path(team)
              = # link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete
      %tr
        %td{ colspan: '5' }
          .actions
            = link_to 'New Team', new_team_path
