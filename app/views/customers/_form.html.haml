= form_for customer do |f|
  -if customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - customer.errors.full_messages.each do |msg|
          %li= msg
  .clearfix
    .field
      = label_tag :company_name, 'Company'
      #{current_company.display_name}
    .field
      = f.label :key
      = f.text_field :key
    .field
      = f.label :name
      = f.text_field :name
  %hr
  .actions
    = f.submit 'Save'
    = link_to 'Cancel', customers_path